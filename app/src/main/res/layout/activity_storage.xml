<?xml version="1.0" encoding="utf-8"?>
<!-- Storage screen with responsive layout using layout_weight -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">


    <!-- Text input for naming new storage location -->
    <EditText
        android:id="@+id/storageNameInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:hint="Enter storage location"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Add button -->
    <Button
        android:id="@+id/addStorageButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Add Location"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Storage list area -->
    <ListView
        android:id="@+id/storageListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
